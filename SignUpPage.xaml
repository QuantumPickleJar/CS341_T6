
<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CookNook.SignUpPage"
             NavigationPage.HasNavigationBar="False">

    <Grid>

        <Image Source="steakimage.jpg" VerticalOptions="Start"></Image>

        <Image Source="darkmodesignupscreen2.png" Aspect="AspectFill"></Image>

        <Grid RowDefinitions="*, *, *, Auto, Auto, Auto, Auto, Auto, Auto, *">

            <StackLayout Grid.Row="3">
                <Label Text="Username:" Margin="10,10,10,0" TextColor="#ffe6a7"/>
            </StackLayout>

            <StackLayout Grid.Row="4">
                <Entry Placeholder="Username" Margin="10,0,10,10" TextColor="#ffe6a7"/>
            </StackLayout>

            <StackLayout Grid.Row="5">
                <Label Text="Password:" Margin="10,20,10,0" TextColor="#ffe6a7"/>
            </StackLayout>

            <StackLayout Grid.Row="6">
                <Entry Placeholder="Password" Margin="10,0,10,10" TextColor="#ffe6a7"></Entry>
            </StackLayout>

            <StackLayout Grid.Row="7">
                <Label Text="Re-Enter Password:" Margin="10,20,10,0" TextColor="#ffe6a7"/>
            </StackLayout>

            <StackLayout Grid.Row="8">
                <Entry Placeholder="Password" Margin="10,0,10,10" TextColor="#ffe6a7"></Entry>
            </StackLayout>

            <StackLayout Grid.Row="9" Orientation="Horizontal" HorizontalOptions="FillAndExpand">

                <StackLayout Padding="10" VerticalOptions="Center">
                    <Button Text="Back" Clicked="BackClicked" VerticalOptions="Center" BackgroundColor="#5D151B" TextColor="#ffe6a7"/>
                </StackLayout>

                <Button Text="Sign Up" HorizontalOptions="FillAndExpand" VerticalOptions="Center" Margin="0,10,10,10" BackgroundColor="#5D151B" TextColor="#ffe6a7"/>

            </StackLayout>

        </Grid>

    </Grid>

</ContentPage>
