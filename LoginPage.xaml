<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CookNook.LoginPage"
             Title="LoginPage">

    <Grid RowDefinitions="*, *, Auto, Auto, Auto, Auto, *, Auto">

        <StackLayout Grid.Row="2">
            <Label Text="Username:" Margin="10,10,10,0"/>
        </StackLayout>

        <StackLayout Grid.Row="3">
            <Entry Text="Test" x:Name="Username" Placeholder="Username" Margin="10,0,10,10"/>
        </StackLayout>

        <StackLayout Grid.Row="4">
            <Label Text="Password:" Margin="10,20,10,0"/>
        </StackLayout>

        <StackLayout Grid.Row="5">
            <Entry Text="Test" x:Name="Password" Placeholder="Password" Margin="10,0,10,10"></Entry>
        </StackLayout>

        <StackLayout Grid.Row="7" Orientation="Horizontal" HorizontalOptions="FillAndExpand">

            <StackLayout Padding="10" VerticalOptions="Center">
                <Button Text="Back" VerticalOptions="Center" />
            </StackLayout>

            <Button Clicked="LoginClicked" Text="Login" HorizontalOptions="FillAndExpand" VerticalOptions="Center" Margin="0,10,10,10" />

        </StackLayout>

    </Grid>

</ContentPage>
