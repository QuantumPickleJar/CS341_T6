<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CookNook.Feed"
             Title="Feed">

    <ContentPage.ToolbarItems>
        <ToolbarItem x:Name="searchToolbarItem"
                    IconImageSource="magnifyingglass.png"
                    Priority="0"
                    Order="Primary" />

        <ToolbarItem x:Name="profileToolbarItem"
                    IconImageSource="profile.png"
                    Priority="1"
                    Order="Primary" />
    </ContentPage.ToolbarItems>



    <Grid RowDefinitions="0, 80, 10, *">


        <Grid Grid.Row="1" Padding="20" ColumnDefinitions="80, 15,  *">

            <Button Text="Filter" Grid.Column="0" HeightRequest="40"></Button>

            <StackLayout Padding="10, 0, 10, 0" Orientation="Horizontal" Grid.Column="1">
                <BoxView BackgroundColor="Black" WidthRequest="1" VerticalOptions="FillAndExpand" HorizontalOptions="Center" />
            </StackLayout>


            <ScrollView Orientation="Horizontal" HorizontalScrollBarVisibility="Never" Grid.Column="2">

                <StackLayout Orientation="Horizontal">

                    <StackLayout Padding="5, 0, 5, 0">
                        <Frame WidthRequest="70" HeightRequest="40" Padding="0">
                            <Label Text="Dinner" FontSize="Body" VerticalTextAlignment="Center" HorizontalTextAlignment="Center"></Label>
                        </Frame>
                    </StackLayout>

                    <StackLayout Padding="5, 0, 5, 0">
                        <Frame WidthRequest="70" HeightRequest="40" Padding="0">
                            <Label Text="Beef" FontSize="Body" VerticalTextAlignment="Center" HorizontalTextAlignment="Center"></Label>
                        </Frame>
                    </StackLayout>

                    <StackLayout Padding="5, 0, 5, 0">
                        <Frame WidthRequest="70" HeightRequest="40" Padding="0">
                            <Label Text="Mexican" FontSize="Body" VerticalTextAlignment="Center" HorizontalTextAlignment="Center"></Label>
                        </Frame>
                    </StackLayout>

                    <StackLayout Padding="5, 0, 5, 0">
                        <Frame WidthRequest="70" HeightRequest="40" Padding="0">
                            <Label Text="Grill" FontSize="Body" VerticalTextAlignment="Center" HorizontalTextAlignment="Center"></Label>
                        </Frame>
                    </StackLayout>

                </StackLayout>

            </ScrollView>


        </Grid>

        <StackLayout Orientation="Horizontal" Grid.Row="2">
            <BoxView BackgroundColor="Black" HeightRequest="1" HorizontalOptions="FillAndExpand" VerticalOptions="Center" />
        </StackLayout>


