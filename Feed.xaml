<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CookNook.Feed"
             Title="Feed">

    <ContentPage.ToolbarItems>
            <ToolbarItem x:Name="searchToolbarItem"
                    IconImageSource="magnifyingglass.png"
                    Priority="0"
                    Order="Primary" />

            <ToolbarItem x:Name="profileToolbarItem"
                    IconImageSource="profile.png"
                    Priority="1"
                    Order="Primary" />
    </ContentPage.ToolbarItems>



    <VerticalStackLayout>



        <ScrollView>


            <StackLayout Padding="10">

                <Frame HasShadow="True" BorderColor="Black" Padding="10, 10, 10, 10">

                <StackLayout>
        
                    <StackLayout Orientation="Horizontal">
                        <Label Text="Text 1" 
                               VerticalOptions="CenterAndExpand" 
                               HorizontalOptions="StartAndExpand"
                               FontSize="20" />
                        <Image Source="profile.png"
                           VerticalOptions="CenterAndExpand" 
                           HorizontalOptions="Center"
                           HeightRequest="40"/>
                    </StackLayout>

                        <Label Text="Single Text" 
                           FontSize="20" />

                        <Image Source="profile.png"
                           VerticalOptions="CenterAndExpand" 
                           HorizontalOptions="Center"
                           HeightRequest="100" />
                </StackLayout>

            </Frame>

            </StackLayout>


        </ScrollView>


    </VerticalStackLayout>

</ContentPage>
