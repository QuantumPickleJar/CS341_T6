<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ProtoFiles.WelcomePage"
             Title="WelcomePage">

    <Grid RowDefinitions="*, *, Auto, Auto, *, Auto">

        <StackLayout Grid.Row="2" Padding="10">
            <Button Text="Login" Clicked="LoginClicked"></Button>
        </StackLayout>
        
        <StackLayout Grid.Row="3" Padding="10">
            <Button Text="Sign Up" Clicked="SignUpClicked"></Button>
        </StackLayout>

        <StackLayout Grid.Row="5" Padding="10">
            <Button Text="Skip" Clicked="SkipClicked"></Button>
        </StackLayout>

    </Grid>

</ContentPage>
