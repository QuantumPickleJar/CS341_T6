<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ProtoFiles.AccountSettings"
             Title="AccountSettings">
    <VerticalStackLayout
        
        Spacing="25"
        Padding="30,0"
        VerticalOptions="Start">
        <Grid
            RowDefinitions="5*,*,*,*,*,*"
            Padding="30,0">
            <Button Padding="60" ImageSource="profile.png" BackgroundColor="Transparent"></Button>
            <StackLayout Grid.Row="1">
                <Label Text="Email: sultaa03@uwosh.edu" Margin="10,10,10,0"/>
            </StackLayout>

            <StackLayout Grid.Row="2">
                <Label Text="Username: asultan" Margin="10,15,10,10"/>
            </StackLayout>

            <StackLayout Grid.Row="3">
                <Label Text="Change Password:" Margin="10,5,10,0"/>
            </StackLayout>

            <StackLayout Grid.Row="4">
                <Entry Placeholder="New Password" Margin="10,0,10,10"/>
            </StackLayout>
            <StackLayout Grid.Row="5">
                <Entry Placeholder="Re-enter Password" Margin="10,0,10,10"/>
            </StackLayout>
        </Grid>
        
    </VerticalStackLayout>
</ContentPage>
