                ItemsSource="{Binding ItemsSource,
                      Source={RelativeSource AncestorType={x:Type controls:AutocompletePicker}}}"
                ItemDisplayBinding="{Binding Name}"
                IsVisible="True">
            --><!-- TODO: might need to define a DataTemplate for the Picker to display the ingredients name's 
            if the ItemDisplayBinding doesn't work --><!--
            
        </Picker>-->
    </VerticalStackLayout>
</ContentView>
