<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:controls="using:CookNook.Controls"
             x:Class="CookNook.Controls.AutocompletePicker">
    <VerticalStackLayout>
        <Entry x:Name="IngredientEntry" Placeholder="Ingredient" TextColor="#ffe6a7"
               TextChanged="IngredientEntry_TextChanged"></Entry>
        <!--Picker for the ingredients-->
        <Picker x:Name="IngredientPicker" 
                Title="Add Ingredients..." 
                ItemsSource="{Binding ItemsSource,
                              Source={RelativeSource AncestorType={x:Type controls:AutocompletePicker}}}"
                ItemDisplayBinding="{Binding Name}">
        </Picker>

    </VerticalStackLayout>
</ContentView>
