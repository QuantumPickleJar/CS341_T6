<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CookNook.Profile"
             Title="Username">

    <ContentPage.ToolbarItems>
        <ToolbarItem x:Name="profileToolbarItem"
                    IconImageSource="hamburgermenu.png"
                    Priority="1"
                    Order="Primary"
                    Clicked="SettingsClicked"/>
    </ContentPage.ToolbarItems>

        <ScrollView>
            <Grid
                RowDefinitions="5*,*,*,*,*,*"
                Padding="30,0">
                <Button Grid.Row="0" Padding="30" ImageSource="profile.png" BackgroundColor="Transparent"></Button>

                <Label Grid.Row="1" Text="Username" HorizontalTextAlignment="Center" FontSize="Title" ></Label>

                <Label Grid.Row="3" Text="Best Birria Tacos"></Label>
                <Image Grid.Row="4" Source="tacos.png"></Image>
            </Grid>
        </ScrollView>
        


</ContentPage>
