<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ProtoFiles.Profile"
             Title="Profile">
    <VerticalStackLayout
        Spacing="25"
        Padding="30,0"
        VerticalOptions="Start">
        <ScrollView>
            <Grid
                RowDefinitions="5*,*,*,*,*,*"
                Padding="30,0">
                <Button Grid.Row="0" Padding="30" ImageSource="profile.png" BackgroundColor="Transparent"></Button>
                <Label Grid.Row="1" Text="asultan" HorizontalTextAlignment="Center"></Label>
                <Label Grid.Row="2" FontSize="Large" Text="Latest Recipes" HorizontalTextAlignment="Center" Padding="30"></Label>
                <Label Grid.Row="3" Text="Best Birria Tacos"></Label>
                <Image Grid.Row="4" Source="tacos.png"></Image>
            </Grid>
        </ScrollView>
        
    </VerticalStackLayout>
</ContentPage>
