<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CookNook.Profile"
             Title="Profile">

    <ContentPage.ToolbarItems>
        <ToolbarItem x:Name="searchToolbarItem"
                IconImageSource="magnifyingglass.png"
                Priority="0"
                Order="Primary" 
                Clicked="SearchClicked"/>

        <ToolbarItem x:Name="profileToolbarItem"
                IconImageSource="gearssolid.svg"
                Priority="1"
                Order="Primary" 
                Clicked="SettingsClicked"/>
    </ContentPage.ToolbarItems>
    <VerticalStackLayout
        Spacing="25"
        Padding="30,0"
        VerticalOptions="Start"
        BackgroundColor="#202c39">
        

        <ScrollView>
            <Grid
                RowDefinitions="5*,*,*,*,*,*"
                Padding="30,0">
                <Button Grid.Row="0" Padding="30" ImageSource="profile.png" BackgroundColor="Transparent"></Button>

                <Label Grid.Row="1" Text="{Binding AppUser.Username}" HorizontalTextAlignment="Center" FontSize="Title" TextColor="#ffe6a7"></Label>

                <Label Grid.Row="3" Text="Best Birria Tacos" TextColor="#ffe6a7"></Label>
                <Image Grid.Row="4" Source="tacos.png"></Image>
            </Grid>
        </ScrollView>
    </VerticalStackLayout>


</ContentPage>
