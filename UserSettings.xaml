<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CookNook.UserSettings"
             Title="UserSettings"
             BackgroundColor="#202c39">
    <VerticalStackLayout
        BackgroundColor="#202c39"
        Spacing="25"
        Padding="30,0"
        VerticalOptions="Start">
        <Grid
            RowDefinitions="5*,*,*, *"
            Padding="30,0">
          <StackLayout Spacing="10">
            <Image Source="{Binding UserImage}" Aspect="AspectFill" Margin="0,40,0,20" />
            <!-- Button to Change Picture -->
                <Button Text="Change Picture" Clicked="OnChangePictureClicked" BackgroundColor="#5D151B"/>

                
            </StackLayout>

            <StackLayout Grid.Row="1" Padding="10">
                <Button Clicked="UserAccountSettingsClicked" Text="Account Settings" BackgroundColor="#5D151B"></Button>
            </StackLayout>

            <StackLayout Grid.Row="2" Padding="10">
                <Button Clicked="DietaryRestrictionsClicked" Text="Dietary Preferences" BackgroundColor="#5D151B"></Button>
            </StackLayout>

            <!--<StackLayout Grid.Row="3" Padding="10">
                <Button Clicked="LogOutClicked" Text="Log out" BackgroundColor="#5D151B"></Button>
            </StackLayout>-->
        </Grid>
        
    </VerticalStackLayout>
</ContentPage>
