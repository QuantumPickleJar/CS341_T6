<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
       xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
       xmlns:converter="clr-namespace:CookNook.Model"
       x:Class="CookNook.RecipePopUpView">
    

    <ContentPage.Resources>
        <ResourceDictionary>
            <converter:ByteToImageConverter x:Key="ByteToImageConverter"/>
        </ResourceDictionary>
    </ContentPage.Resources>

    <ScrollView>
        <StackLayout Padding="20" HorizontalOptions="Center" VerticalOptions="Center">
            <!-- Recipe Image -->
            <Image Source="{Binding Image, Converter={StaticResource ByteToImageConverter}}" Aspect="AspectFill"/>

            <!-- Recipe Name -->
            <Label Text="{Binding Name}" FontSize="Large" FontAttributes="Bold"/>

            <!-- Recipe Description -->
            <Label Text="{Binding Description}" FontSize="Medium"/>

            <!-- Cook Time -->
            <Label Text="{Binding CookTime}" FontSize="Medium"/>

            <!-- Close Button -->
            <Button Text="Close" Clicked="CloseButtonClicked"/>
        </StackLayout>
    </ScrollView>
</ContentPage>

