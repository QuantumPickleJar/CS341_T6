<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CookNook.WelcomePage"
             NavigationPage.HasNavigationBar="False">

    <Grid>

        <Image Source="steakimage.jpg" VerticalOptions="Start"></Image>

        <Image Source="darkmodewelcomescreen2.png" Aspect="AspectFill"></Image>

        <Grid RowDefinitions="*, *, *, Auto, Auto, *, Auto">

        <StackLayout Grid.Row="3" Padding="10">
            <Button Text="Login" Clicked="LoginClicked"></Button>
        </StackLayout>
        
        <StackLayout Grid.Row="4" Padding="10">
            <Button Text="Sign Up" Clicked="SignUpClicked"></Button>
        </StackLayout>

        <StackLayout Grid.Row="6" Padding="10">
            <Button Text="Skip" Clicked="SkipClicked"></Button>
        </StackLayout>

    </Grid>

    </Grid>

</ContentPage>
