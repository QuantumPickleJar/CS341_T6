<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CookNook.AddRecipePage"
             Title="Add Recipe"
             NavigationPage.HasBackButton="False">


    <Grid RowDefinitions="150, auto, auto, *, auto" Padding="20" BackgroundColor="#202c39">

        <Frame Grid.Row="0" HasShadow="True" BorderColor="Black" Padding="10, 50, 10, 50" BackgroundColor="#7D8895">
                <Label Text="This is a placeholder for adding an image" />
        </Frame>

        <!--<StackLayout Spacing="0" Padding="10">
            <Picker x:Name="picker"
                    Title="Publishing Setting">
            <Picker.ItemsSource>
                <x:Array Type="{x:Type x:String}">
                <x:String>Public</x:String>
                <x:String>Friends and Family</x:String>
                </x:Array>
            </Picker.ItemsSource>
            </Picker>
            </StackLayout>-->

        <StackLayout Grid.Row="2">
            <Entry x:Name="Name" Placeholder="Enter recipe name..." TextColor="#ffe6a7"/>
        </StackLayout>

        <StackLayout Grid.Row="3">
            <Entry x:Name="TimeToMake" Placeholder="Enter cook time" TextColor="#ffe6a7"/>
        </StackLayout>

            <!--<StackLayout Spacing="0" Padding="10">
            <Editor Placeholder="Enter instructions here..."
                AutoSize="TextChanges"
                HeightRequest="150" />
            </StackLayout>-->

        <StackLayout Grid.Row="4">
            <Button Text="Next" Clicked="NextClicked" BackgroundColor="#5D151B" TextColor="#ffe6a7"/>
        </StackLayout>

    </Grid>


</ContentPage>



