<?xml version="1.0" encoding="utf-8"?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CookNook.AddRecipeIngredientsPage"
             Title="Add Recipe Ingredients">

    <StackLayout Margin="10">
        <CollectionView x:Name="IngredientsList">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <StackLayout Orientation="Horizontal">
                        <Label Text="{Binding Name}" HorizontalOptions="StartAndExpand"/>
                        <Label Text="{Binding Quantity}" HorizontalOptions="Center"/>
                        <Label Text="{Binding Unit}" HorizontalOptions="Center"/>
                        <Button Text="Remove" Command="{Binding RemoveCommand}" CommandParameter="{Binding .}"/>
                    </StackLayout>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

        <Entry x:Name="IngredientEntry" Placeholder="Enter ingredient name"/>
        <Entry x:Name="QuantityEntry" Placeholder="Enter quantity" Keyboard="Numeric"/>

        <Picker x:Name="UnitPicker" Title="Select a unit">
            <Picker.ItemsSource>
                <x:Array Type="{x:Type x:String}">
                    <x:String>cups</x:String>
                    <x:String>oz</x:String>
                    <x:String>lbs</x:String>
                    <x:String>tbsps</x:String>
                    <x:String>tsps</x:String>
                    <x:String>grams</x:String>
                </x:Array>
            </Picker.ItemsSource>
        </Picker>
            <Entry x:Name="CourseEntry" Placeholder="Enter course (e.g., Appetizer, Main Course)"/>
        <Button Text="Add Ingredient" Clicked="AddIngredientClicked"/>
        <Button Text="Complete Recipe" Clicked="CompleteRecipeClicked" HorizontalOptions="Center"/>
    </StackLayout>

</ContentPage>
